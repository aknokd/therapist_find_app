<header class='header'>
  <div class='heading-left'>
    <h1 class="title"><li><%= link_to 'THERAPIST FIND APP', root_path, class: "title"%></li></h1>
  </div>
  <div class="heding-right">
    <div class="navbar">
      <% unless therapist_signed_in? %>
      <ul class="nav-lists">
        <% if user_signed_in? %>
          <li class="heading-right-list"><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
          <li class="heading-right-list"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <% else %>
          <li class="heading-right-list"><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
          <li class="heading-right-list"><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>
</header>